@model List<Domain.Entities.Restaurant>

@{
    ViewData["Title"] = "My Restaurants";
}

<div class="container mt-4">
    <h2><i class="fas fa-utensils"></i> My Restaurants</h2>
    <p class="text-muted">Select a restaurant to review pending menu items.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't own any restaurants yet (or the email doesn't match).
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var restaurant in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@restaurant.Name</h5>
                            <p class="card-text">
                                Status:
                                <span class="badge @(restaurant.Status == "Approved" ? "bg-success" : "bg-warning text-dark")">
                                    @restaurant.Status
                                </span>
                            </p>
                            <p class="small text-muted">
                                Pending Items: @restaurant.MenuItems.Count(m => m.Status == "Pending")
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            @* Кнопка ведет на страницу проверки МЕНЮ этого ресторана *@
                            <a asp-action="VerificationMenu" asp-route-id="@restaurant.Id" class="btn btn-outline-primary w-100">
                                Review Menu Items
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>