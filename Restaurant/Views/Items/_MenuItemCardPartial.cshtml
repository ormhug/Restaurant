@model Domain.Entities.MenuItem
<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"> @Model.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text"><strong>Статус:</strong> <span class="badge bg-warning">@Model.Status</span></p>
            <p class="card-text"><strong>Цена:</strong> @Model.Price.ToString("F2") @Model.Currency</p>
            <p class="card-text"><strong>Ресторан ID:</strong> @Model.RestaurantId</p>
            <p class="card-text">
                <small class="text-muted">
                    @if (Model.Restaurant != null)
                    {
                        <span>Ресторан: @Model.Restaurant.Name</span>
                    }
                </small>
            </p>
        </div>
        <div class="card-footer text-muted">
            <small>ID: @Model.Id</small>
        </div>
    </div>
</div>