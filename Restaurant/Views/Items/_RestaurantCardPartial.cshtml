@model Domain.Entities.Restaurant

<div class="card h-100 shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
    @* --- ИЗОБРАЖЕНИЕ --- *@
    <div style="height: 160px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; overflow: hidden;">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover;">
        }
        else
        {
            <span class="text-muted">No Image</span>
        }
    </div>

    @* --- ТЕЛО КАРТОЧКИ --- *@
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title fw-bold mb-0">@Model.Name</h5>
            @if (Model.Status == "Approved")
            {
                <span class="badge bg-success" style="font-size: 0.6em;">Approved</span>
            }
            else
            {
                <span class="badge bg-warning text-dark" style="font-size: 0.6em;">@Model.Status</span>
            }
        </div>

        <p class="card-text text-muted small text-truncate">
            @Model.Description
        </p>

        @* АДРЕС *@
        <div class="small text-muted mb-1">
            <i class="fas fa-map-marker-alt me-1"></i> @Model.Address
        </div>

        @* ТЕЛЕФОН *@
        @if (!string.IsNullOrEmpty(Model.Phone))
        {
            <div class="small text-muted">
                <i class="fas fa-phone me-1"></i> @Model.Phone
            </div>
        }
    </div>

    @* --- ФУТЕР (Только кнопка Delete) --- *@
    <div class="card-footer bg-white border-top-0 pb-3 pt-0">
        @* Кнопка Delete *@
        <form asp-controller="Items" asp-action="Delete" method="post"
              onsubmit="return confirm('Are you sure you want to delete this restaurant?');">

            @* Передаем ID ресторана *@
            <input type="hidden" name="id" value="@Model.Id" />

            <button type="submit" class="btn btn-outline-danger btn-sm w-100" style="border-radius: 8px;">
                Delete
            </button>
        </form>
    </div>
</div>