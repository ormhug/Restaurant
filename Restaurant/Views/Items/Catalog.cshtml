@model List<Domain.Interfaces.IItemValidating>
@{
    ViewData["Title"] = "Items Catalog";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Restaurants</h2>
        <span class="text-muted">Total: @Model.Count()</span>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center p-5">
            <h4>Catalog is empty</h4>
            <p>Please add new restaurants using the button above.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-12 col-md-6 col-lg-3 mb-4">

                    @* самa карточкa (картинка, название, описание) *@
                    @await Html.PartialAsync(item.GetCardPartial(), (object)item)

                    @* большая кнопка снизу *@
                    <div class="card-footer bg-white border-top-0">
                        <a asp-action="Details" asp-route-id="@item.GetId()" class="btn btn-primary w-100">
                            View Menu &raquo;
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>