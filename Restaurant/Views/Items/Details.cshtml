@model List<Domain.Entities.MenuItem>

@{
    ViewData["Title"] = "Menu - " + ViewBag.RestaurantName;
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Catalog" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i> Back to Catalog
        </a>
        <h2 class="mb-0">Menu: <span class="text-primary">@ViewBag.RestaurantName</span></h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            This restaurant hasn't published a menu yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fw-bold">@item.Title</h5>
                                @* Если есть описание в модели, можно добавить сюда *@
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success fs-6">@item.Price @item.Currency</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>